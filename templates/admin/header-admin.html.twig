<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="text-center logo-pad">
                {% if start %}
                    <a class="nav-link logo-get-started" href="{{ url('admin.don') }}">
                        <span class="logo-don">DON</span>
                        <span class="logo-text"> - System</span>
                    </a>
                    <div class="lang-container">
                        <div class="lang-btn pointer" id="language-button">
                            {{ language['language'] }}
                        </div>
                        <div class="lang-selection">
                            <div class="lang-item">
                                <a href="/lang/ru">
                                    <span>{{ language['ru'] }}</span>
                                </a>
                            </div>
                            <div class="lang-item">
                                <a href="/lang/en">
                                    <span>{{ language['en'] }}</span>
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                <a class="nav-link logo" href="{{ url('admin.don') }}">
                    <span class="logo-don">DON</span>
                    <span class="logo-text"> - System</span>
                </a>
                {% endif %}
            </div>
            <hr>
        </div>
    </div>
</div>
