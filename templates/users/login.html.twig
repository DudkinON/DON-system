{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block content %}
    <section class="admin-content">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-lg-3">
                    {% include 'sidebar.html.twig' %}
                </div>
                <div class="col-md-6 col-lg-6">
                    {% if user %}
                        <h1>OK</h1>
                    {% else %}
                        <div class="login-form">
                            <h1 class="form-header text-center">{{ language['login_form'] }}</h1>
                            {% if errors %}
                                <div class="errors-container">
                                    <h5>{{ language['errors'] }}</h5>
                                    <ul>
                                        {% for error in errors %}
                                            <li>{{ error }}</li>
                                        {% endfor %}
                                    </ul>
                                </div>
                            {% endif %}
                            <form action="" method="post">
                                <div class="form-container">
                                    <input name="email" type="email" placeholder="{{ language['email'] }}" class="form-control mt-2">
                                    <input name="password" type="password" placeholder="{{ language['password'] }}" class="form-control mt-2">
                                </div>
                                <div class="text-center form-container">
                                    <button name="login" class="btn btn-don pointer text-uppercase">{{ language['sign_in'] }}</button>
                                </div>
                            </form>
                            <hr>
                            <div class="text-center form-container">
                                <p>{{ language['or'] }}</p>
                                <a href="{{ url('users.register') }}">{{ language['sign_up'] }}</a>
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-3 col-lg-3"></div>
            </div>
        </div>
    </section>
{% endblock %}